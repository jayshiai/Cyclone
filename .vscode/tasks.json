{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe build active file",
			"command": "D:/MinGW/bin/g++.exe",
			"args": [
                "-g",
                "main.cpp",
                "./frontend/Lexer.cpp",
                "./frontend/Parser.cpp",
                "-I", "include",  // Include the header directory
                "-o",
                "compiler"
            ],
			"options": {
				"cwd": "${workspaceFolder}" 
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: D:/MinGW/bin/g++.exe"
		}
	]
}